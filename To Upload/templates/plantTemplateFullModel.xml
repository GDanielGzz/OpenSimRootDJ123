<SimulationModelIncludeFile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../scripts/XML/SimulaXMLSchema.xsd">
	<SimulaBase name="plantTemplate">
	</SimulaBase>

	<!--ShootTemplate-->
	<SimulaBase name="shootTemplate">
	    <!-- extinction coef needed for both evapo and carbon model, and placed here so that the in link always there -->
		<SimulaLink name="extinctionCoefficient" />
	</SimulaBase>


	<!--HypocotylTemplate-->
	<!--///@todo: get rid of the 'root' word for these generic functions-->
	<SimulaBase name="hypocotylTemplate">
		<SimulaBase
			name="dataPoints"
			objectGenerator="rootDataPoints">
		</SimulaBase>
		<SimulaPoint
			name="growthpoint"
			function="rootGrowthDirection"
			garbageCollectionOff="true">
			0 0 0
			<SimulaVariable
				name="rootPotentialLongitudinalGrowth"
				unit="cm"
				function="potentialRootGrowthRate" />
			<SimulaVariable
				name="rootLongitudinalGrowth"
				unit="cm"
				function="scaledRootGrowthRate"
				garbageCollectionOff="true" />
		</SimulaPoint>
		<SimulaBase name="branches">
			<!--here the program will insert new branches-->
		</SimulaBase>
		<!--
			Following will be inserted by the program: <SimulaConstant name="rootType" type="string" unit="noUnit">
			defined-by-function </SimulaConstant>
		-->
	</SimulaBase>


	<!--Sibling root template-->
	<SimulaBase name="siblingRootTemplate">
		<SimulaBase
			name="dataPoints"
			objectGenerator="rootDataPoints">
		</SimulaBase>
		<SimulaPoint
			name="growthpoint"
			function="rootGrowthDirection"
			garbageCollectionOff="true">
			0 0 0
			<SimulaVariable
				name="rootPotentialLongitudinalGrowth"
				unit="cm"
				function="potentialRootGrowthRate" />
			<SimulaVariable
				name="rootLongitudinalGrowth"
				unit="cm"
				function="scaledRootGrowthRate"
				garbageCollectionOff="true" />
		</SimulaPoint>
		<!--
			Following will be inserted by the program: <SimulaConstant name="rootType" type="string" unit="noUnit">
			defined-by-function </SimulaConstant>
		-->
		<SimulaBase name="branches">
			<!--here the program will insert new branches-->
		</SimulaBase>
	</SimulaBase>



	<!--DataPointTemplate-->
	<SimulaBase
		name="dataPointTemplate">
		<SimulaDerivative
			name="spatialRootDensity"
			unit="cm/cm3"
			function="proximity" /><!-- only used by barber cushman -->
		<SimulaDerivative
			name="rootClassID"
			function="rootClassID" /><!-- only for visulaization -->
		<SimulaDerivative
			name="parentRootClassID"
			function="rootClassID" /><!-- only for visulaization -->
		<SimulaDerivative
			name="combinedRootClassID"
			function="rootClassID" /><!-- only for visulaization -->
	</SimulaBase>
</SimulationModelIncludeFile>